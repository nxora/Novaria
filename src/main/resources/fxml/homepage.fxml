<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>

<BorderPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml" fx:controller="org.novaria.view_ui.HomePageController">
    <!-- ðŸ§­ Top Navbar -->
    <top>
        <HBox spacing="20" style="-fx-background-color: rgba(0,0,0,0.7); -fx-padding: 15;">
            <Label text="ðŸ“š Novaria" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
            <TextField fx:id="searchField" promptText="Search books..."
                       HBox.hgrow="ALWAYS"
                       style="-fx-background-radius: 20; -fx-prompt-text-fill: #bbb; -fx-text-fill: white;"/>
            <Button fx:id="profileButton" text="ðŸ‘¤"
