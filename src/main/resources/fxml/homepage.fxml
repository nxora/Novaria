        </HBox>
    </top>

    <!-- ðŸª„ Main Content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-padding: 10;">
            <VBox spacing="25"><padding><Insets top="20" bottom="20" left="20" right="20"/></padding>

                <!-- ðŸŒŸ Featured Section -->
                <VBox spacing="10">
                    <Label text="Featured" style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;"/>
