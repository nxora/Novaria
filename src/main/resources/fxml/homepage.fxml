                        <Label text="Mystery" style="-fx-font-size: 16px; -fx-text-fill: white;"/>
                        <ScrollPane hbarPolicy="NEVER" vbarPolicy="NEVER" style="-fx-background: transparent;">
                            <HBox fx:id="mysteryContainer" spacing="15">
                                <padding><Insets top="10" bottom="10" left="10" right="10"/></padding>
                            </HBox>

                        </ScrollPane>
                    </VBox>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
