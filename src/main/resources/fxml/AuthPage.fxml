<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.effect.GaussianBlur?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.novaria.view_ui.AuthController"
           stylesheets="@../css/authpage.css">

    <!-- ðŸŒ„ Background Image -->
    <ImageView fx:id="backgroundImage"
               fitWidth="1920" fitHeight="1080"
               preserveRatio="false"
               StackPane.alignment="CENTER"
                 >
        <image>
            <Image url="@../media/images/library1.jpeg"/>
        </image>
    </ImageView>

    <!-- ðŸŒ« Dark overlay -->
    <Rectangle fx:id="overlay" width="1920" height="500" StackPane.alignment="CENTER">
        <effect>
            <GaussianBlur radius="10"/>
        </effect>
        <style>
            -fx-fill: rgba(0, 0, 0, 0.5);
        </style>
    </Rectangle>

    <!-- ðŸª„ Auth Card -->
    <VBox fx:id="authCard" spacing="20" alignment="CENTER" StackPane.alignment="CENTER" maxWidth="400" styleClass="auth-card">

        <!-- âœ¨ Title -->
        <VBox alignment="CENTER">
            <Label text="Welcome to Novaria" styleClass="auth-title"/>
            <Label text="Log in to continue your reading journey" styleClass="auth-subtitle"/>
        </VBox>

        <!-- ðŸ“ LOGIN FORM -->
        <VBox fx:id="loginForm" spacing="15" alignment="CENTER" styleClass="form-container">
            <TextField fx:id="loginEmailField" promptText="Email" styleClass="input-field"/>
            <PasswordField fx:id="loginPasswordField" promptText="Password" styleClass="input-field"/>
            <Button text="Login" onAction="#onLoginClicked" styleClass="main-btn"/>
            <Hyperlink text="Forgot Password?" onAction="#onForgotPassword"/>
            <CheckBox fx:id="rememberMeCheck" text="Remember Me" style="-fx-text-fill: #E7D1BF;"/>

        </VBox>

        <!-- ðŸ†• SIGN UP FORM -->
        <VBox fx:id="signUpForm" spacing="15" alignment="CENTER" styleClass="form-container" visible="false" managed="false">
            <TextField fx:id="signUpNameField" promptText="Full Name" styleClass="input-field"/>
            <TextField fx:id="signUpEmailField" promptText="Email" styleClass="input-field"/>
            <PasswordField fx:id="signUpPasswordField" promptText="Password" styleClass="input-field"/>
            <PasswordField fx:id="signUpConfirmPasswordField" promptText="Confirm Password" styleClass="input-field"/>
            <Button text="Sign Up" onAction="#onSignUpClicked" styleClass="main-btn"/>

            <ComboBox fx:id="signUpGenderBox" promptText="Select Gender" styleClass="input-field" prefWidth="300">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Male" />
                        <String fx:value="Female" />
                        <String fx:value="Other" />
                    </FXCollections>
                </items>
            </ComboBox>

        </VBox>



        <!-- ðŸŒ Social Logins -->
        <VBox alignment="CENTER" spacing="15">
        <Button fx:id="googleBtn" styleClass="social-btn" prefWidth="300">
            <graphic>
                <HBox alignment="CENTER" spacing="10">
                    <ImageView fx:id="googleIcon" fitHeight="35" fitWidth="35" />
                    <Label text="Sign in with Google" style="-fx-text-fill: #333; -fx-font-size: 15px; -fx-font-weight: 500;" />
                </HBox>
            </graphic>
        </Button>

        <Button fx:id="facebookBtn" styleClass="social-btn" prefWidth="300">
            <graphic>
                <HBox alignment="CENTER" spacing="10">
                    <ImageView fx:id="facebookIcon" fitHeight="35" fitWidth="35" />
                    <Label text="Sign in with Facebook" style="-fx-text-fill: #333; -fx-font-size: 15px; -fx-font-weight: 500;" />
                </HBox>
            </graphic>
        </Button>
        </VBox>



        <!-- ðŸ”„ Switch -->
        <HBox alignment="CENTER" spacing="5">
            <Label fx:id="switchPrompt" text="Don't have an account?" style="-fx-text-fill: #E7D1BF;" />
            <Hyperlink fx:id="switchLink" text="Sign up" onAction="#switchToSignUp" style="-fx-text-fill: #E7D1BF;"/>
        </HBox>

    </VBox>
</StackPane>
