<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
 <?import javafx.scene.image.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.shape.Rectangle?>

<StackPane fx:id="root"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.novaria.view_ui.LandingPageController"
           stylesheets="@../css/landingPage.css">

    <!-- ðŸ–¼ Background Layer -->
    <ImageView fx:id="heroImage"
               preserveRatio="false" smooth="true" cache="true" StackPane.alignment="CENTER"/>

    <!-- ðŸŒ« Overlay Layer -->
