        <effect>
            <GaussianBlur radius="12"/>
        </effect>
    </Rectangle>

    <!-- ðŸ§­ Main UI Content (on top of background + overlay) -->
    <BorderPane fx:id="mainContent" maxWidth="550">

        <!-- âœ¨ Hero Text -->
        <top>
            <VBox alignment="CENTER" spacing="5" styleClass="hero-container">
                <Label text="Welcome to Novaria" styleClass="hero-title"/>
                <Label text="Where stories come alive." styleClass="hero-subtitle"/>
            </VBox>
        </top>

        <!-- ðŸ“š Center Content -->
        <center>
            <VBox spacing="15" alignment="CENTER" styleClass="center-section">
                <Label text="Escape into stories that never end." styleClass="center-title"/>
                <Label text="Your digital library for discovering and reading your favorite books." styleClass="center-subtitle"/>
                <HBox spacing="10" alignment="CENTER">
                    <Button text="Login" styleClass="main-btn" onAction="#onLoginClicked"/>
                    <Button text="Sign Up" styleClass="main-btn" onAction="#onLoginClicked"/>
                </HBox>
            </VBox>
        </center>

        <!-- ðŸ“ Footer -->
        <bottom>
            <HBox alignment="CENTER" spacing="15" styleClass="footer">
                <Label text="Made with â¤ï¸ by Daveora"/>
                <Label text="|"/>
                <Label text="All Rights Reserved Â© 2025"/>
                <Hyperlink text="GitHub" onAction="#openGitHub" styleClass="footer-link"/>
                <Hyperlink text="Snapchat" onAction="#openSnapchat" styleClass="footer-link"/>
            </HBox>
        </bottom>

    </BorderPane>

</StackPane>
