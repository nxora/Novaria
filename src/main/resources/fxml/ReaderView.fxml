<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.novaria.view_ui.ReaderViewController"
            style="-fx-background-color: #2b2b2b;">

    <!-- Top Bar with Book Info -->
    <top>
        <VBox style="-fx-background-color: rgba(0,0,0,0.8); -fx-padding: 15;">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button fx:id="backButton" text="â† Back"
                        style="-fx-background-color: #444; -fx-text-fill: white;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="bookTitleLabel" text="Book Title"
                       style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="authorLabel" text="by Author"
                       style="-fx-text-fill: #aaa; -fx-font-size: 14px;"/>
            </HBox>
        </VBox>
    </top>

    <!-- Main Reading Area -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: transparent;">
            <VBox alignment="TOP_CENTER" style="-fx-padding: 40;">
                <TextArea fx:id="contentArea"
                          wrapText="true"
                          editable="false"
                          prefWidth="700"
                          prefHeight="600"
                          style="-fx-background-color: #3a3a3a;
                                -fx-text-fill: white;
                                -fx-font-size: 16px;
                                -fx-font-family: 'Georgia';
                                -fx-border-color: transparent;"/>
            </VBox>
        </ScrollPane>
    </center>

    <!-- Bottom Controls -->
    <bottom>
        <HBox spacing="20" alignment="CENTER"
              style="-fx-background-color: rgba(0,0,0,0.8); -fx-padding: 15;">
            <Button fx:id="prevButton" text="â—€ Previous"
                    style="-fx-background-color: #555; -fx-text-fill: white;"/>
            <Label fx:id="pageNumberLabel" text="Page 1 of 10"
                   style="-fx-text-fill: white; -fx-font-size: 14px;"/>
            <Button fx:id="nextButton" text="Next â–¶"
                    style="-fx-background-color: #555; -fx-text-fill: white;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="bookmarkButton" text="ðŸ”– Bookmark"
                    style="-fx-background-color: #d4a017; -fx-text-fill: white;"/>
        </HBox>
    </bottom>

</BorderPane>